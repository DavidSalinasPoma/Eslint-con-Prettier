{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  // "plugins": ["prettier"], // Este viene con una configuracion de reglas por defecto
  //   Desabilitar las reglas de eslint que hacen conflicto con prettier
  "extends": ["airbnb-base", "prettier", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": "error", // Punto y coma obligatorio
    "prettier/prettier": ["error", { "endOfLine": "auto" }]
  }
}
